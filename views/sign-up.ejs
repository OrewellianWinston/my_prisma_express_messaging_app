        <input id = 'lastName' name = 'lastName' placeholder="lastName" class="text-white border-white rounded-3xl w-1/6 hover:bg-gray-500 border m-3 text-center">
        <button type="submit" class="text-white border-white rounded-3xl w-1/6 hover:bg-gray-500 border m-3 p-1 hover:cursor-pointer">Register</button>
        <a href="/login" class="text-white border-white rounded-3xl w-1/6 hover:bg-gray-500 border m-3 p-1 text-center">Login</a>
    </form>
</body>
</html>
