<body class="bg-[#F5F5DC]">
    <form action="/sign-up" method="post" class="rounded-3xl bg-gray-900 flex flex-wrap flex-col p-3 mx-32 my-32 justify-center items-center">
        <label id ='login' name="login" class="p-2 text-white"></label>
        <input id = 'login' name = 'username' placeholder="Login" class="text-white border-white rounded-3xl w-1/6 hover:bg-gray-500 border m-3 hover:bg-gray-500 text-center">
        <label id ='password' name="password" ></label>
        <input id = 'password' name = 'password' placeholder="Password" class="text-white border-white rounded-3xl w-1/6 hover:bg-gray-500 border m-3 text-center">
